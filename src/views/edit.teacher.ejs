                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="row justify-content-center">
        <div class="col-lg-8 justify-content-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center">Actualiza los Datos de <span class="text-dark-emphasis">
                            <%=teacher.name%>
                                <%=teacher.lastname%>
                        </span></h4>
                    <form action="/api/utxj/teachers/updateOne/<%=teacher.eni%>" method="POST">
                        <div class="row">
                            <div class="col-lg">
                                <label for="txt_dni" class="form-label">Número de Trabajador</label>
                                <input type="text" name="eni" id="txt_eni" class="form-control"
                                    value="<%= teacher.eni %>">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="txt_name" class="form-label">Nombre</label>
                                        <input type="text" id="txt_name" name="name" class="form-control"
                                            value="<%= teacher.name %>">
                                    </div>
                                    <div class="col-lg-6">
                                        <label for="txt_lastname" class="form-label">Apellidos</label>
                                        <input type="text" id="txt_lastname" name="lastname" class="form-control"
                                            value="<%= teacher.lastname %>">
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-lg-6">
                                        <label for="txt_average" class="form-label">Grado de Estudios</label>
                                        <input type="text" name="average" id="txt_average" class="form-control"
                                            value="<%= teacher.profession %>">
                                    </div>
                                    <div class="col-lg-6">
                                        <label for="txt_area" class="form-label">Área</label>
                                        <input type="text" name="area" id="txt_grade" class="form-control"
                                            value="<%= teacher.area %>">
                                    </div>
                                    <div class="col-lg">
                                        <label for="txt_salario" class="form-label">Salario</label>
                                        <input type="text" class="form-control" id="txt_salario" name="salario" value="<%=teacher.salario%>">
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <button class="btn btn-outline-success">Actualizar<button />
                                </div>
                            </div>
                        </div>
                    </form>

            </div>
        </div>
    </div>
    </div>
</body>

</html>l